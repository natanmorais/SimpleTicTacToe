<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.fir3destr0yer.tictactoe.ChooseIcons">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Basic2_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/basic2_o" />

    <ImageView
        android:id="@+id/Basic2_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_toRightOf="@+id/Basic2_O"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/basic2_x" />

    <ImageView android:id="@+id/Cromo_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cromo_o"
        android:layout_below="@+id/Basic2_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Cromo_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cromo_x"
        android:layout_below="@+id/Basic2_X"
        android:layout_toRightOf="@+id/Cromo_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Crystal_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/crystal_o"
        android:layout_below="@+id/Cromo_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Crystal_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/crystal_x"
        android:layout_below="@+id/Cromo_X"
        android:layout_toRightOf="@+id/Crystal_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Hard_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hard_o"
        android:layout_below="@+id/Crystal_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Hard_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/hard_x"
        android:layout_below="@+id/Crystal_X"
        android:layout_toRightOf="@+id/Hard_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Light_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/light_o"
        android:layout_below="@+id/Hard_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Light_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/light_x"
        android:layout_alignTop="@+id/Light_O"
        android:layout_alignLeft="@+id/Hard_X"
        android:layout_alignStart="@+id/Hard_X" />

    <ImageView android:id="@+id/Logo_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo3d_o"
        android:layout_below="@+id/Light_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Logo_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/logo3d_x"
        android:layout_below="@+id/Light_X"
        android:layout_toRightOf="@+id/Logo_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Neon_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/neon_o"
        android:layout_below="@+id/Logo_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Neon_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/neon_x"
        android:layout_below="@+id/Logo_X"
        android:layout_toRightOf="@+id/Neon_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Texture_O"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/texture_o"
        android:layout_below="@+id/Neon_O"
        android:layout_marginTop="20dp"/>

    <ImageView android:id="@+id/Texture_X"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/texture_x"
        android:layout_below="@+id/Neon_X"
        android:layout_toRightOf="@+id/Texture_O"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>

</RelativeLayout>

</ScrollView>
